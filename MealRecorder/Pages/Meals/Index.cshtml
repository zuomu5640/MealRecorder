@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MealRecorder.Pages.Meals.IndexModel

@{
    ViewData["Title"] = "食事記録一覧";
}

<h1>食事記録一覧</h1>

<p>
    <a asp-page="Create">新規作成</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meal[0].MealDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal[0].MealType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Meal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MealDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.MealId">編集</a> |
                    <a asp-page="./Details" asp-route-id="@item.MealId">詳細</a> |
                    <a asp-page="./Delete" asp-route-id="@item.MealId">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>